@model ProjetoEstagio.Application.ViewModels.ComputadorViewModel

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 divAvisoDelete">
        <h2>Excluir Computador?</h2>
        @using (Html.BeginForm("Delete", "Computador"))
        {

            <div class="form-group">
                @Html.HiddenFor(model => Model.ID)

                @Html.ActionLink("Cancelar", "Lista", "Computador", null, new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-primary">Sim</button>
            </div>
        }
    </div>
</div>

