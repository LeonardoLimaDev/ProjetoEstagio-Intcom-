@model List<ProjetoEstagio.Application.ViewModels.ComputadorViewModel>
@using ProjetoEstagio.Application.ViewModels



<div class="form-group">
    <div class="row">

        <div class="col-lg-12 col-md-12 col-sm-12 divDados">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h3>Empresa: @ViewBag.NomeEmpresa</h3>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h3>Funcionário: @ViewBag.NomeFuncionario</h3>
            </div>

            <hr />
        </div>
        <hr />
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr class="header-tabela">
                        <th>
                            Placa Mãe
                        </th>
                        <th>
                            Processador
                        </th>
                        <th>
                            Espaço Hd(Gb)
                        </th>
                        <th>
                            Total Memoria RAM(Gb)
                        </th>
                        <th class="text-center w15">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="w30">
                                @string.Format("{0} / {1}",item.PlacaMae.Modelo,item.PlacaMae.Marca)
                            </td>
                            <td class="25">
                                @string.Format("{0} / {1}", item.Processador.Marca, item.Processador.Modelo)
                            </td>
                            <td class="w15 text-center">
                                @Html.DisplayFor(modelItem => item.CapacidadeTotalHd)
                            </td>
                            <td class="20 text-center">
                                @Html.DisplayFor(modelItem => item.CapacidadeTotalMemoriaRAM)
                            </td>

                            <td class="tdAcoes text-center w10">
                                <a href="Details/@item.ID" class="btnDetails"><span class="glyphicon glyphicon-zoom-in" title="Detalhar"></span></a>
                                <a href="Edit/@item.ID" class="btnEdit"><span class="glyphicon glyphicon-edit" title="Editar"></span></a>
                                <a href="Delete/@item.ID" class="btnDelete"><span class="glyphicon glyphicon-trash" title="Excluir"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-12 divBotaoIncluir">
            @Html.ActionLink("Incluir Novo Computador", "CreateComputador", "Computador", new { @class = "btn btn-lg btn-primary" })
        </div>
    </div>
</div>
<link href="~/Content/Lista.css" rel="stylesheet" />
